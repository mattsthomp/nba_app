<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Event num</th>
      <th>Player code</th>
      <th>Team</th>
      <th>Game</th>
      <th>Event type</th>
      <th>Time elapsed</th>
      <th>Home score</th>
      <th>Visitor score</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.event_num %></td>
        <td><%= event.player_code %></td>
        <td><%= event.team %></td>
        <td><%= event.game_id %></td>
        <td><%= event.event_type %></td>
        <td><%= event.time_elapsed %></td>
        <td><%= event.home_score %></td>
        <td><%= event.visitor_score %></td>
        <td><%= event.description %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

